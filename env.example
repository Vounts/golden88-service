# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration - Individual Parameters (No CONNECTION_STRING)
# Replace with your actual Aiven PostgreSQL connection details
DB_HOST=pg-2cd7c8b2-auth-asai.e.aivencloud.com
DB_PORT=12590
DB_NAME=defaultdb
DB_USER=avnadmin
DB_PASSWORD=your_aiven_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
# Set to true for Aiven (they provide proper SSL certificates)
DB_SSL_REJECT_UNAUTHORIZED=true
# Path to CA certificate file from Aiven
DB_SSL_CA_CERT_PATH=./certs/ca-certificate.crt

# JWT Configuration
# IMPORTANT: Generate secure secrets using: openssl rand -base64 32
# These MUST be at least 32 characters long for security
JWT_ACCESS_SECRET=your-super-secret-access-key-at-least-32-chars-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-chars-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

# CORS Configuration
# Use comma-separated URLs for multiple origins: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=*
