{
  "name": "fastify-auth-api",
  "version": "1.0.0",
  "description": "Production-ready TypeScript + Fastify REST auth API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsup --config tsup.dev.config.ts --watch",
    "dev:tsx": "tsx watch src/index.ts",
    "build": "tsup",
    "build:dev": "tsup --config tsup.dev.config.ts",
    "start": "node dist/index.js",
    "migrate": "psql $DATABASE_URL -f migrations/001_init.sql",
    "migrate:node": "tsx scripts/migrate.ts",
    "railway:migrate": "node dist/scripts/migrate.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:setup": "tsx scripts/setup-test-db.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "fastify",
    "auth",
    "typescript",
    "jwt",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "jose": "^6.1.0",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "@types/node": "^24.5.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
